---
    layout: isi/depan.njk
    title: 'Kusaeni : tulisan dan catatan'
---

<ol class="postlist">
    {% for artikel in collections.jurnal | reverse %}
    <li class="plist">
        <a class="nodec" href="{{ artikel.url | url }}">
            <div class="mb-1 font-sans text-sm text-gray-600 uppercase">{{ artikel.date | dateReadable }}
                {% if artikel.data.update %}
                    <span class="inline-block px-2 ml-2 font-sans text-xs font-semibold text-red-700 uppercase bg-red-100 md:text-sm rounded-md">updated</span>
                {% endif %}
            </div>
            <div class="text-xl text-black">{{ artikel.data.title }}</div>
            <div class="font-sans text-base text-gray-600">{{ artikel.data.ringkasan }}</div>
        </a>
    </li>
    {% endfor %}
</ol>
